config defaultToCurrentScreen true


# POSITION ALIASES
alias full          move screenOriginX;screenOriginY                screenSizeX;screenSizeY
alias half-l        move screenOriginX;screenOriginY                screenSizeX/2;screenSizeY
alias half-r        move screenOriginX+screenSizeX/2;screenOriginY  screenSizeX/2;screenSizeY
alias quarter-tl    move screenOriginX;screenOriginY                screenSizeX/2;screenSizeY/2
alias quarter-bl    move screenOriginX;screenOriginY+screenSizeY/2  screenSizeX/2;screenSizeY/2


# BASIC LOCATION BINDINGS
bind f:t,ctrl   ${full}

bind h:t,ctrl   ${half-l}
bind l:t,ctrl   ${half-r}

bind k:t,ctrl   ${quarter-tl}
bind j:t,ctrl   ${quarter-bl}


# RELOAD CONFIG
bind r:t,ctrl   relaunch


# SHORTCUT TO SWITCH WINDOWS
bind e:ctrl hint QWERTYUIOP
